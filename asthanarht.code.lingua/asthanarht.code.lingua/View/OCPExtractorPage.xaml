<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="asthanarht.code.lingua.View.OCPExtractorPage">

  <ContentPage.Content>

    <StackLayout VerticalOptions="StartAndExpand">
      <Image Source="{Binding SenderImageUri}" WidthRequest="60" HeightRequest="60" VerticalOptions="Center"/>
      <Label Text="{Binding Message}" LineBreakMode="WordWrap" ></Label>
    </StackLayout>
    
  </ContentPage.Content>
</ContentPage>