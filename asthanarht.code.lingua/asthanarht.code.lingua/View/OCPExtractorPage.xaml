<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="asthanarht.code.lingua.View.OCPExtractorPage">

  <ContentPage.Content>

    <StackLayout VerticalOptions="StartAndExpand">
      <Image Source="{Binding ImageUri}" WidthRequest="260" HeightRequest="260" VerticalOptions="Center"/>
      <Label Text="{Binding Status , Mode=TwoWay}" LineBreakMode="WordWrap" TextColor="Black"></Label>
    </StackLayout>
    
  </ContentPage.Content>
</ContentPage>