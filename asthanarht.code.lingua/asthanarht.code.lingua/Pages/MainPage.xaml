<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="asthanarht.code.lingua.Pages.MainPage" Title="Lingua Franca" >


		<Grid BackgroundColor="#673AB7" RowSpacing="0" ColumnSpacing="0" Padding="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
		<Grid.RowDefinitions>
					          <RowDefinition Height="*"  />
					          <RowDefinition Height="100" />
					          <RowDefinition Height="100"  />
				              
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
   
    <ColumnDefinition Width="*" />
	
  </Grid.ColumnDefinitions>
		<Grid Padding ="10" Grid.Row="0" >
  <RelativeLayout >
      <Image x:Name="DefaultPhoto"  Source="{Binding ImageUri}" Aspect="AspectFill"  />
      <Image x:Name="ClickPhoto" HeightRequest="50" WidthRequest="50" Source="cameraoutline.png" RelativeLayout.YConstraint="{ConstraintExpression Type=Constant, &#xA; Constant=0}" RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, &#xA;Property=Width,&#xA;ElementName=DefaultPhoto,&#xA;Constant=-48}" />
    </RelativeLayout>
		</Grid>	
  <Grid BackgroundColor="#FF4081" Grid.Row="1"  >

	</Grid>			
      <Label
         x:Name="captureOCR"
		 Grid.Row="1"
		 HorizontalOptions="FillAndExpand"			

         HeightRequest="100"
		 YAlign="Center"
	     XAlign="Center"
         BackgroundColor="#FF4081"
         TextColor="White"  
       
         Text="OCR"/>
<Grid BackgroundColor="#03A9F4" Grid.Row="2" >
      
      </Grid>
				<Label 
       x:Name="setting"
	 
	   Grid.Row="2"
       HeightRequest="100"
       BackgroundColor="#03A9F4"
       YAlign="Center"
	   XAlign="Center"
       TextColor="White"
	   
       Text="Setting"/>
      
        
 
			</Grid>

</ContentPage>